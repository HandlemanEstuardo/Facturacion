@model List<FacturaMVC.Models.ViewModel.ClienteListTablaViewModel>
@{
    ViewBag.Title = "Datos del Clientes";
}

<h2>Datos Cliente</h2>
<div class="row" style="text-align:right;padding:5px;">
    <a href="~/MaestroDetalle/Agregar" class="btn btn-primary">Regresar</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">

            <tr>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Nit</th>
                <th></th>

            </tr>

           @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.idCliente</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Nit</td>

                    <td>
                        <a class="btn btn-danger" href="~/MaestroDetalle/EliminarCliente/@oElemento.idCliente">Eliminar</a>
                    </td>
                </tr>
            }

        </table>


    </div>


</div>

