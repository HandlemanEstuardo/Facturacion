@model List<FacturaMVC.Models.ViewModel.FacturaListViewModel>
@{
    ViewBag.Title = "Listado de Facturas";
}

<h2>Datos de Facturas</h2>
<div class="row" style="text-align:right;padding:5px;">
    <a href="~/MaestroDetalle/Agregar" class="btn btn-primary">Regresar</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">

            <tr>
                <th>Numero Detalle</th>
                <th>Codigo Cliente</th>
                <th>Cantidad</th>
                <th>Nombre Producto</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>

            </tr>

            @foreach (var oElemento in Model)
            {
            <tr>
                <td>@oElemento.id</td>
                <td>@oElemento.idVenta</td>
                <td>@oElemento.cantidad</td>
                <td>@oElemento.nombre</td>
                <td>@oElemento.precioUnitario</td>
                <td>@oElemento.total</td>

                <td>
                   
                    <a class="btn btn-danger" href="~/MaestroDetalle/EliminarFactura/@oElemento.id">Eliminar</a>
                    
                </td>
            </tr>
            }

        </table>


    </div>


</div>


